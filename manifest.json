{
  "manifest_version": 3,
  "name": "IMO AI Shopping Assistant",
  "version": "1.0",
  "description": "Automatically enhances your shopping experience with AI insights.",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://informedmarketopinions.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.in/*",
        "*://*.walmart.com/*",
        "*://*.ebay.com/*",
        "*://*.target.com/*",
        "*://*.bestbuy.com/*"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "src/styles.css"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_title": "Analyze with IMO",
    "default_icon": "logo.png",
    "default_popup": "src/popup.html"
  }
}